<!-- Sections -->
{% section 'random-collection' %} <!-- Add a new section => Create section -->
<!-- Creates random-collection.liquid schema file -->
{% schema %}
	{
		"name": "Section name",
		"settings": []
	}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

<!-- Update above file to -->
{% assign collection = collections['all'] %}
{{ collection.title }}
<ul>
	{% for product in collection.products %}
		{% unless section.settings.hide_soldout != false 
			and product.available != true %} <!-- access data from settings schema using sections object  -->
		<li>
			<a style="color:{{ settings.link_color }}" href="{{ product.url }}">
				{{ product.title }} - {{ product.price | money }}
				{% if product.available != true %}
					(SOLD OUT)
				{% endif %}
			</a>
		</li>
		{% endunless %}
	{% endfor %}
</ul>
{% schema %}
	{
		"name": "Section name",
		"settings": [
			{
				"type": "checkbox",
				"id": "hide_soldout",
				"label": "Hide Sold Out Products",
				"default": false
			}
		]
	}
{% endschema %}
